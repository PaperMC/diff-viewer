{
    "manifest_version": 3,
    "name": "Patch Roulette",
    "version": "0.0.2",
    "description": "Adds a button to open diffs in the Patch Roulette Diff Viewer.",
    "permissions": ["tabs", "storage"],
    "icons": {
        "128": "favicon.png"
    },
    "action": {
        "default_title": "Patch Roulette",
        "default_icon": {
            "128": "favicon.png"
        },
        "default_popup": "index.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "patch-roulette@papermc.io"
        }
    }
}
